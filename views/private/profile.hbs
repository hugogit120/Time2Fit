    <form action="/private/profile/delete/" method="POST">
        <button class="button-delete-profile" type="submit"><a href="/private/profile/delete/">Delete
                Profile</a></button>
    </form>


    <br><br>
    <h1>Routines ({{routines.length}})</h1>
    {{#each routines}}
    <div class="container-routine">

        <div class="routine">
            <h2>{{this.title}}</h2>
        </div>

        <a href="/routines/{{this._id}}">
            <button class="button-edit">
                Edit
            </button>
        </a>

        <form action="/private/routines/delete/{{this._id}}" method="POST">
            <button class="button-delete-routine" type="submit">Delete</button>
        </form>

    </div>
    {{/each}}
