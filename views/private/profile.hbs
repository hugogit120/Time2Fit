<p><a href="/private/profile/edit">Edit Profile</a></p>
<p><a href="/routines/add">Create Routine</a></p>
<form action="/private/profile/delete/" method="POST">
    <button type="submit">Delete Profile</button>
</form>
<br><br>
<h1>Routines ({{routines.length}})</h1>
{{#each routines}}
<div>
    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <form action="/private/routines/delete/{{this._id}}" method="POST">
        <button type="submit">Delete</button>

    </form>
    <a href="/routines/{{this._id}}">Edit</a>
</div>
{{/each}}